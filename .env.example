# =============================================================================
# MINI CRM - ZENTRALE KONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# PROJEKT-KONFIGURATION
# -----------------------------------------------------------------------------
PROJECT_NAME=mini-crm
COMPANY_NAME=Your Company

# -----------------------------------------------------------------------------
# DOMAIN-KONFIGURATION
# -----------------------------------------------------------------------------
# Hauptdomain für das Frontend
FRONTEND_DOMAIN=crm.your-domain.com

# Subdomain für die API
API_DOMAIN=api.crm.your-domain.com

# Lokale Entwicklungs-URLs (werden automatisch gesetzt, falls DOMAIN nicht definiert)
# FRONTEND_URL=https://${FRONTEND_DOMAIN}
# API_URL=https://${API_DOMAIN}

# -----------------------------------------------------------------------------
# DATENBANK-KONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=mini_crm

# -----------------------------------------------------------------------------
# REDIS-KONFIGURATION
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password

# -----------------------------------------------------------------------------
# BACKEND-KONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001

# JWT-Konfiguration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# CORS-Konfiguration (komma-separierte Liste)
CORS_ORIGINS=https://${FRONTEND_DOMAIN},http://localhost:3000,http://localhost:5173

# API-Metadaten
API_TITLE=Mini CRM API
API_DESCRIPTION=API Documentation for Mini CRM
API_VERSION=1.0

# -----------------------------------------------------------------------------
# FRONTEND-KONFIGURATION
# -----------------------------------------------------------------------------
VITE_API_URL=https://${API_DOMAIN}
VITE_APP_NAME=Mini CRM
VITE_COMPANY_NAME=${COMPANY_NAME}

# -----------------------------------------------------------------------------
# FILE UPLOAD
# -----------------------------------------------------------------------------
DOCUMENT_STORAGE_PATH=/app/uploads/documents
DOCUMENT_MAX_SIZE=104857600

# -----------------------------------------------------------------------------
# TRAEFIK-KONFIGURATION
# -----------------------------------------------------------------------------
TRAEFIK_NETWORK=crm-network
TRAEFIK_CERT_RESOLVER=le

# Container-Namen (optional, für Customisierung)
DB_CONTAINER_NAME=${PROJECT_NAME}-db
REDIS_CONTAINER_NAME=${PROJECT_NAME}-redis
BACKEND_CONTAINER_NAME=${PROJECT_NAME}-backend
FRONTEND_CONTAINER_NAME=${PROJECT_NAME}-frontend

# -----------------------------------------------------------------------------
# IMAP-KONFIGURATION (optional)
# -----------------------------------------------------------------------------
IMAP_HOST=
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=
IMAP_TLS=true

# -----------------------------------------------------------------------------
# SEADRIVE-KONFIGURATION (optional)
# -----------------------------------------------------------------------------
SEADRIVE_ENABLED=false
SEADRIVE_SERVER_URL=
SEADRIVE_USERNAME=
SEADRIVE_PASSWORD=
SEADRIVE_LIBRARY_ID=
